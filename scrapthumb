#!/bin/bash
# Scrap Tumblr to get random images
# Usage: feh --bg-scale $(scrapthumb -n1 -s http://desktopwallpaperproject.tumblr.com)

# TODO
# - Handle network errors

GETTER="wget -t1 -qO -"
VIEWER=echo
MAXIMGS=5
RANDOMIZE=0

# No trailing slash
DEF_SOURCES=(
	"http://desktopwallpaperproject.tumblr.com"
	"http://wallpapermag.tumblr.com"
	"http://hdwallpaper.1nation.eu"
)

##
# Do not edit below.
##

SOURCES=()
IMGS=()

preload() {
	s=0
	for i in $(seq 0 $(echo $MAXIMGS - 1|bc))
	do
		if [ $RANDOMIZE -ne 0 ]; then
			n=${#SOURCES[*]}
			s=$(echo $RANDOM%$n|bc)
		else
			s=$(echo $s+1|bc)
		fi

		src=${SOURCES[$s]}

		[ $s -ge ${#SOURCES[@]} ] && s=0
		IMGS[$i]="$($GETTER "$src/random" |grep -o 'property="og:image" content=".*"' |cut -b 29- |tr -d \")"
	done
}

usage() {
echo -n "Usage: $0 [-hns]
-s 	Source
-n	Number of items
-h	Show this helps
"

exit 1
}

main() {
	while getopts "hn:s:r" opt; do
		case $opt in
			h) usage;;
			n) MAXIMGS=$OPTARG;;
			s)
				i=${#SOURCES[*]}
				SOURCES[$i]=$OPTARG;;
			r) RANDOMIZE=1;;
		esac
	done

	[ ${#SOURCES[*]} -eq 0 ] && SOURCES=${DEF_SOURCES[@]}

	echo ${SOURCES[*]}
	exit 0

	preload
	$VIEWER ${IMGS[*]}
}

main "$@"
